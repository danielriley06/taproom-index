<h1> Edit <%= current_user.name %>'s Account Information</h2>
<form class="form-horizontal" method="post" action="/signup">
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="signup_firstname" name="signup_firstname" value="<%= @user.first_name%>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <input type="text" class="form-control" id="signup_lastname" name="signup_lastname" value="<%= @user.last_name%>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <input type="email" class="form-control" id="signup_email" name="signup_email" value="<%= @user.email%>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <input type="password" class="form-control" id="signup_password" name="signup_password" value="Update Password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Sign Up!</button>
    </div>
  </div>
</form>
