<!doctype html>
<html>
  <head>
    <title>Brewery Tracker</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/brewery.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="/js/vendor/bootstrap.min.js"></script>
    <link href="/css/star-rating.min.css" media="all" rel="stylesheet" type="text/css" />
    <script src="/js/vendor/star-rating.min.js" type="text/javascript"></script>

  </head>
  <body>
    <% if logged_in? %>
    <nav class="navbar navbar-inverse">
         <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
               <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               </button>
               <a class="navbar-brand" href="/breweries">
               <img alt="Brand" src="/img/beer.png">
               </a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
               <ul class="nav navbar-nav">

                  <li class="active"><a href="/">My Breweries <span class="sr-only">(current)</span></a></li>
                  <li><a href="/map">Map <span class="sr-only"></span></a></li>
               </ul>
                  <ul class="nav navbar-nav navbar-right" align="right">
                    <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Account <span class="caret"></span></a>
                      <ul class="dropdown-menu">
                        <li><a href="/user/account">Account Options</a></li>
                        <li role="separator" class="divider"></li>
                        <li><a href="/logout">Log Out</a></li>
                      </ul>
                    </li>
                  </ul>
            </div> <!-- /.navbar-collapse -->
         </div> <!-- /.container-fluid -->
      </nav> <!-- /.navbar -->
       <% else %>
       <%end %>
       <div class="container">
      <%= yield %>
    </div>
    <script type="text/javascript">
      $("#input-1").rating({min:0, max:5, step:1, size:'xs', showClear:false});
      $(document).on('ready', function(){
        $('#input-2').rating({displayOnly: true});
      });
    </script>


  </body>
</html>
